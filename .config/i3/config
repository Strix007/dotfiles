
# Set Super(Win) Key As Mod Key

set $mod Mod4

# i3 Font

font pango:System San Fransisco 11

# Use Mouse+$mod To Drag Floating Windows To Their Wanted Position

floating_modifier $mod

# Use Function Keys To Control All Players Using playerctl
 
# Previous Song
 
bindsym XF86AudioPrev exec playerctl previous
 
# Toggle Play/Pause

bindsym XF86AudioPlay exec playerctl play-pause
 
# Next Song
 
bindsym XF86AudioNext exec playerctl next

# Use $mod+Shift+x to Lock Desktop Using A Custom i3lock Script

bindsym $mod+Shift+x exec /home/arbab/.config/i3lock/lock.sh

# Start A Terminal (Current: Alacritty)

bindsym $mod+Return exec alacritty

# Kill Focused Window

bindsym $mod+q kill

# Start A Program Launcher (Currently Rofi)

bindsym $mod+d exec rofi -show drun -theme /home/arbab/.config/rofi/launcher/launcher.rasi
bindsym $mod+Shift+d exec rofi -show run -theme /home/arbab/.config/rofi/launcher/launcher.rasi

# Using A Script Using Rofi To Take Screenshots

# Execute The Script

bindsym $mod+g exec /home/arbab/.config/rofi/screenshot/screenshot.sh

# Stop The Recording 

bindsym $mod+Shift+g exec /home/arbab/.config/rofi/screenshot/screenshot.sh --stop

# Switch To Specific Application Using Rofi Show Window

bindsym $mod+t exec rofi -show window -theme /home/arbab/.config/rofi/applist/applist.rasi

# ToDo List Using Rofi

bindsym $mod+l exec --no-startup-id rofi -modi ToDo:/home/arbab/.config/rofi/todo/todo.sh -theme /home/arbab/.config/rofi/todo/todo.rasi -show

# Powermenu Script Using Rofi

bindsym $mod+Shift+q exec /home/arbab/.config/rofi/powermenu/powermenu.sh

# Change Focus

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move Focused Window

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Horizontal Split Orientation

bindsym $mod+Shift+h split h

# Vertical Split Orientation

bindsym $mod+v split v

# Fullscreen Mode

bindsym $mod+f fullscreen toggle

# Switch Fullscreen Window

bindsym $mod+Shift+f fullscreen disable, focus left, fullscreen enable

# Change Container Layout (stacked, tabbed, toggle split)

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Ttoggle Tiling/Floating
bindsym $mod+Shift+space floating toggle

# Change Focus Between Tiling/Floating Windows
bindsym $mod+space focus mode_toggle

# Focus The Parent Container
bindsym $mod+a focus parent

# Focus The Child Child container
bindsym $mod+Shift+a focus child

# Define Workspace Variables

set $ws1  "1: Browsing"
set $ws2  "2: Terminals"
set $ws3  "3: Files"
set $ws4  "4: Developement"
set $ws5  "5: Applications"
set $ws6  "6: Gaming"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9: Background Processes"
set $ws10 "10: Spotify"

# Switch To Workspace

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2; exec /home/arbab/.config/i3/scripts/bindings/alacritty.sh
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10; exec /home/arbab/.config/i3/scripts/bindings/spotify.sh

# Mmove Focused Container To Workspace

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Assign Specific Appilications To Workspaces

assign     [class="firefox"]                     $ws1
assign     [class="Alacritty"]                   $ws2
assign     [class="Thunar"]                      $ws3
assign     [class="Org.gnome.Nautilus"]          $ws3
assign     [class="Code - Insiders"]             $ws4
assign     [class="Code"]                        $ws4
assign     [class="Steam"]                       $ws6
assign     [class="Spotify"]                     $ws10
for_window [class="Spotify"]   move to workspace $ws10

# Restart i3 (Preserve Session)

bindsym $mod+Shift+r restart

# Reload /home/arbab/.config/i3/config File

bindsym $mod+Shift+c reload

# Resize Window (Use Mouse)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Left Will Increase The Focused Window's Width 
        
        bindsym Left resize shrink width 10 px or 10 ppt

        # Right Will Decrease The Focused Window's Width

        bindsym Down resize grow height 10 px or 10 ppt
        
        # Up Will Increase The Focused Window's Height

        bindsym Up resize shrink height 10 px or 10 ppt
        
        # Down Will Decrease The Focused Window's Height

        bindsym Right resize grow width 10 px or 10 ppt

        # Quit Resizing
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Window Colors

set $bg-color            #3B4252
set $inactive-bg-color   #2E3440
set $text-color          #F3F4F5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

for_window [class="^.*"] border pixel 1

#client.state            border-color       background-color   text-color           indicator-color

client.focused           $bg-color          $bg-color          $text-color          $inactive-bg-color  
client.focused_inactive  $inactive-bg-color $inactive-bg-color $inactive-text-color $inactive-bg-color 
client.unfocused         $inactive-bg-color $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent            $urgent-bg-color   $urgent-bg-color   $text-color          $inactive-bg-color

hide_edge_borders both

