[global]
	monitor = 0
	follow = mouse
	geometry = "325x50-8+40"
	indicate_hidden = yes
	shrink = yes
	transparency = 0
	notification_height = 0
	separator_height = 1
	padding = 10
	horizontal_padding = 16
	frame_width = 2
	frame_color = "#3B4252"
	separator_color = frame
	sort = yes
	idle_threshold = 120
	font = Liga SFMono Nerd Font Bold 8
	line_height = 4
	markup = full
	format = "%a\n%s\n%b"
	alignment = left
	show_age_threshold = 60
	word_wrap = yes
	ignore_newline = no
	stack_duplicates = true
	hide_duplicate_count = false
	show_indicators = yes
	icon_position = left
	show_icons = left
	max_icon_size = 48
	icon_path = /usr/share/icons/Papirus/16x16/status/:/usr/share/icons/Papirus/16x16/devices/:/usr/share/icons/Papirus/16x16/apps/
	sticky_history = yes
	history_length = 20
	dmenu = /usr/bin/dmenu -p dunst:
	browser = /usr/bin/google-chrome-stable -new-tab
	always_run_script = true
	title = Dunst
	class = Dunst
	startup_notification = false
	force_xinerama = false
	corner_radius = 8
[experimental]
	per_monitor_dpi = false
[shortcuts]
	close = 
	close_all = 
	history = 
	context = 
[Discord]
appname = Discord
format = "Discord\n%s\n%b"
[spotify]
    history_ignore = yes
    appname = Spotify
    format = "<b><span foreground='#A3BE8C'></span> %a</b>\n%s"
    max_icon_size = 128
    timeout = 10
	 frame_color="#A3BE8C"

[urgency_low]
	background  = "#2E3440"
	foreground  = "#ECEFF4"
	timeout     = 2
	icon        = "/home/vu/.config/dunst/icons/030-notification bell.svg" 

[urgency_normal]
	background  = "#2E3440"
	foreground  = "#ECEFF4"
	timeout = 2
	icon        = "/home/vu/.config/dunst/icons/030-notification bell.svg" 

[urgency_critical]
	background  = "#2E3440"
	foreground  = "#ECEFF4"
	timeout = 2
	icon        = "/home/vu/.config/dunst/icons/030-notification bell.svg" 


[Youtube Music]
   history_ignore = yes
   appname = "Youtube Music"
   format = "<b><span foreground='#BF616A'></span> %a</b>\n%s"
   max_icon_size = 128
   timeout = 10
	 frame_color="#BF616A"

[Pomodoro Break]
   appname = "Pomodoro Break"
   format = "Take a break!"
	 frame_color="#A3BE8C"
   script = /home/vu/.scripts/notification_sound_pomo_break.sh

[Pomodoro Work]
   appname = "Pomodoro Work"
   format = "Focus to work!"
	 frame_color="#BF616A"
   script = /home/vu/.scripts/notification_sound_pomo_work.sh

[Pomodoro Pause]
   appname = "Pomodoro Pause"
   format = "Pomodoro Pause!"
	 frame_color="#88C0D0"
   script = /home/vu/.scripts/notification_sound_pomo_pause.sh

